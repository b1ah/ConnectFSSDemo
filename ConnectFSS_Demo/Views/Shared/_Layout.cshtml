<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Connect FSS Demo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="d-flex flex-row-reverse">
        <div class="p-4">Welcome, @Session["userName"] <span style="margin-left:5px;">@Html.ActionLink("logout", "Logout", "Login")</span></div>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
            @if ((bool)@Session["userAdmin"])
            {
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"
                    style="width: 24px; height: 24px; background-image: url('../../Graphics/DoubleDownArrow_24px.png');
                    border-width: 0px; background-color: transparent;">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            }
                @Html.ActionLink("Connect FSS Demo", "Index", "Accounts", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @if ((bool)@Session["userAdmin"])
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Accounts")</li>
                        <li>@Html.ActionLink("Users", "Index", "Users")</li>
                    </ul>
                </div>
            }
            </div>
        </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Connect FSS Demo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@model IEnumerable<ConnectFSS_Demo.Models.Account>

@{
    ViewBag.Title = "Accounts";
}

<h2>Accounts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.name)*@
            Account Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.balance)*@
            Balance
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.AccountType.name)*@
            Type
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.User.first_name)*@
            First Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.User.last_name)*@
            Last Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.balance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountType.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.first_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.last_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
